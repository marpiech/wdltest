#!/usr/bin/env python3

import wdltest
import argparse
import os

__version__ = '0.0.11'

if __name__ == '__main__':
    parser = argparse.ArgumentParser(description='WDL testing framework')
    parser.add_argument('-v', '--version', action='version', version='%(prog)s {}'.format(__version__))
    parser.add_argument('--testconfig', '-t', metavar='testconfig', type=str, required=True, help='configuration file')
    args = parser.parse_args()

    arguments = parser.parse_args()
    #print(os.path.dirname(__file__) + "/../wdltest.cfg")
    test = wdltest.Wdltest(testConfigFile = arguments.testconfig)
    exitCode = test.run()
    test.stop()
    exit(exitCode)